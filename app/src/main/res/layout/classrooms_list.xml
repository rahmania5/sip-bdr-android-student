<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/class_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logoua"
        android:contentDescription="@string/content_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/class_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_classroom"
            style="@style/TextList"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            tools:text="Nama Kelas" />

        <TextView
            android:id="@+id/tv_item_code"
            style="@style/TextList"
            android:layout_marginBottom="6dp"
            tools:text="TSI 101" />

        <TextView
            android:id="@+id/tv_item_period"
            style="@style/TextList"
            android:textColor="@color/colorSubTitle"
            android:textSize="12sp"
            tools:text="Ganjil 2019/2020" />
    </LinearLayout>
</RelativeLayout>